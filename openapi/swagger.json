        ]
      }
    },
    "/v1/books/{bookId}/return": {
      "post": {
        "tags": [
          "book-rest-controller"
        ],
        "operationId": "returnBookById",
        "parameters": [
          {
            "name": "bookId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
