        ]
      }
    },
    "/v1/users": {
      "get": {
        "tags": [
          "user-rest-controller"
        ],
        "operationId": "getAllUsers",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserResource"
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "oauth": []
          }
        ]
      },
      "post": {
        "tags": [
          "user-rest-controller"
        ],
        "operationId": "createUser",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ModifyingUserResource"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/UserResource"
                }
              }
            }
          }
        },
        "security": [
          {
            "oauth": []
          }
        ]
      }
    },
    "/v1/books": {
      "get": {
        "tags": [
          "book-rest-controller"
        ],
        "operationId": "getAllBooks",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/CollectionModelBookResource"
                }
              }
            }
          }
        },
        "security": [
          {
            "oauth": []
          }
        ]
      },
      "post": {
        "tags": [
          "book-rest-controller"
        ],
        "operationId": "createBook",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BookResource"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
