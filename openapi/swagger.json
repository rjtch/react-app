    "/v1/books/{bookId}/borrow": {
      "post": {
        "tags": [
          "book-rest-controller"
        ],
        "operationId": "borrowBookById",
        "parameters": [
          {
            "name": "bookId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
